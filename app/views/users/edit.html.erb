<div  class="edit-user-wrapper">
  <div class="form-inputs edit-user-form">
    <%= simple_form_for(current_user, url: user_path, html: { method: :put }) do |f| %>
    <%= cl_image_tag(@user.photo, height: 110, width: 110, crop: :fill, :id => "show-image") rescue nil %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.error_notification %>
    <%= f.input :age, required: true, autofocus: true, html: {abbr: :none} %>
    <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male'], ['2', 'other']], label_method: :second, value_method: :last, class: "gender-option" %>
    <%= f.input :skill_level, :collection => 1..14, prompt: "What's your skill level?" %>
    <%= f.input :radius, autofocus: true %>
 <!--    <button type="button" class="btn btn-blue" data-toggle="modal" data-target="#exampleModalLong">
      Edit Availabilities
    </button> -->
    <!-- <br> -->
    <div class="form-actions text-center">
      <%= f.button :submit, "Save changes", class: "btn btn-green"%>
    </div>
    <% end %>
  </div>
</div>
