<div  class="edit-user-wrapper">
  <div class="form-inputs edit-user-form">
    <%= simple_form_for(current_user, url: user_path, html: { method: :put }) do |f| %>
    <%= cl_image_tag(@user.photo, height: 110, width: 110, crop: :fill, :id => "show-image") rescue nil %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.error_notification %>
    <%= f.input :age, required: true, autofocus: true, html: {abbr: :none} %>
    <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male'], ['2', 'other']], label_method: :second, value_method: :last, class: "gender-option" %>
    <%= f.input :skill_level, label: false do %>
      <div>
        <label class="control-label integer optional" for="user_skill_level">Skill level</label>
        <a href="https://www.tenniscanada.com/wp-content/uploads/2015/12/Self-Rating-Guide-English.pdf" target="_blank"><i class="fas fa-question-circle" style="color: #7161D0; font-size: 22px;"></i></a>
      </div>
      <%= f.input :skill_level, label: false, :collection => [current_user.skill_level / 10.0, 1.0,1.5,2.0,2.5,3.0,3.5,4.0,4.5,5.0,5.5,6.0,6.5,7.0], prompt: "What's your skill level?", class: "dropdown" %>
    <% end %>
    <%= f.input :radius, label: "Max distance of a court in km", autofocus: true %>
 <!--    <button type="button" class="btn btn-blue" data-toggle="modal" data-target="#exampleModalLong">
      Edit Availabilities
    </button> -->
    <!-- <br> -->
    <div class="form-actions text-center">
      <%= f.button :submit, "Save changes", class: "btn btn-purple"%>
    </div>
    <% end %>
  </div>
</div>
