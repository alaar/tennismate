<div class="wrapper">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <div class="form-inputs col-xs-12">
        <%= simple_form_for(current_user, url: user_path, html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :age, required: true, autofocus: true %>
        <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male'], ['2', 'other']], label_method: :second, value_method: :last %>
        <%= f.input :skill_level, :collection => 1..14, prompt: "What's your skill level?" %>
        <%= f.input :radius, autofocus: true %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
          Edit Availabilities
        </button>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
         <%= cl_image_tag(@user.photo, height: 50, width: 50, crop: :fill, :id => "show-image") rescue nil %>
        <br>
        <div class="form-actions text-center">
          <%= f.button :submit, "Save changes", class: "btn btn-success"%>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">

  <%= render "users/partial_availabilities"%>

</div>
