<div class="outline-user">

  <% @users.each do |user| %>
    <div>
      <div class="container container-user">
        <div class="row">
          <div class="col-xs-12 user_each">
            <%= link_to user_path(user[:id]) do %>
              <div class="avatar-user" style="background-image: url('<%= user.photo %>');">
              </div>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 user_name">
            <h4><%= user.first_name %></h4>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 user_info">
            <p class= "icon-detail_1"><strong>Skill Level<br><%= user.skill_level %></strong></p>
            <p class= "icon-detail_2"><strong>Age<br><%= user.age %></strong></p>
            <p class= "icon-detail_3"><strong>Gender<br><%= user.gender %></strong></p>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-xs-offset-3 view_profile">
            <h4>View Profile</h4>
          </div>
        </div>

      </div>
      <br>
    </div>
  <% end %>
</div>

