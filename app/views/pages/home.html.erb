<div class="wrapper" style="background-image: url(<%= image_path 'sun-ball-tennis-court.jpg'%>);">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2 class="text-center fn">TennisMate</h1>
        <p class ="des">Find your tennis partner today!</p>
      </div>
    </div>
    <div class="row">
      <% resource_name = User.new %>
      <%= simple_form_for(@resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-xs-12">
        <div class="form-inputs text-center form-s">
          <%= f.text_field :email, class: 'ip-b', placeholder: 'Email address' %>
          <%= f.password_field :password, required: false, class: 'ip-b', placeholder: 'Password' %>
          <div class="forgot-password">
            <p>Forgot your password?</p>
          </div>
          <div class="create-account">
            <p>Create an account</p>
          </div>
          <%= f.button :submit, "Sign in", class: 'btn sn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

