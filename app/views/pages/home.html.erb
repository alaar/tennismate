<div class="bki" style="background-image: url(<%= image_path 'sun-ball-tennis-court.jpg'%>);">
  <div class = "container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class = "text-center fn">TennisMate</h1>
        <p class ="des">Find your perfect tennis partner today</p>
      </div>
    </div>
    <div class="row">
      <!-- # start # -->
      <% resource_name = User.new %>
      <%= simple_form_for(@resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-xs-12">
        <div class="form-inputs text-center form-s">
          <%= f.text_field :email, class: 'ip-b', placeholder: 'Email address' %>
          <%= f.text_field :password, required: false, class: 'ip-b', placeholder: 'Password' %>
          <p class = "lineone">Forgot your password?</p>
          <%= f.button :submit, "Sign in", class: 'btn sn' %>
          <p class = "linetwo">Don't have an account?</p>

        </div>

      <% end %>
      <!-- # end # -->
    </div>
  </div>
</div>

<% if false %>
  <%= f.input :email, required: false, autofocus: true, class: 'ip-b' %>
  <%= f.input :password, required: false, class: 'ip-b' %>
<% end %>
