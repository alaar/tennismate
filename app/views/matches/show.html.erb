<div class="container-1">
    <div class="col-xs-12">
      <div class="match-show-info">

        <%= cl_image_tag(@match.requester.photo, height: 80, width: 80, crop: :fill, :id => "show-image") rescue nil %>
        <%= cl_image_tag(@user.approver.photo, height: 80, width: 80, crop: :fill, :id => "show-image") rescue nil %>
        <h3><%= @match.requester.first_name %> vs. <%= @match.approver.first_name %></h3>
        <h3><%= @match.status %></h3>
        <h3><strong>Location:</strong> <%= @match.court.address%></h3>


        <% if @match.approver == current_user && @match.status == "pending"%>
          <%= simple_form_for @match do |f| %>
            <%= f.submit "approve", class: "btn btn-success btn-lg" %>
            <%= f.submit "decline", class: "btn btn-danger btn-lg" %>
          <% end %>
        <% end %>
        <%= link_to "Back to my profile", user_path(current_user)%>
      </div>
    </div>
</div>
