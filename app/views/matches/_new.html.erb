    <%= f.select :court, @user.shared_courts(current_user).map { |court| [court.name, court.id] }, {}, class: "dropdown" %>
  </div>
  <%# f.select :availablility, @user.shared_availabilities(current_user).all.map { |availablility| ["#{availablility.day} #{availablility.day}", availablility.id] } %>
  <div>
    <%= f.submit "Request a match", class: "btn btn-success center-btn request-match-button"%>
  </div>
<% end %>
